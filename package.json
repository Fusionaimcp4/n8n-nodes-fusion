{
  "name": "n8n-nodes-fusion",
  "version": "0.1.0",
  "description": "n8n community node for Fusion AI (NeuroSwitch multi-provider orchestration)",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "fusion",
    "ai",
    "neuroswitch",
    "openai",
    "anthropic",
    "claude",
    "gemini",
    "orchestration"
  ],
  "license": "MIT",
  "homepage": "https://github.com/yilakkidane/n8n-nodes-fusion",
  "author": {
    "name": "Yilak Kidane",
    "email": "yilak@example.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yilakkidane/n8n-nodes-fusion.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "postbuild": "cp nodes/Fusion/fusion.svg dist/nodes/Fusion/fusion.svg && cp nodes/Fusion/Fusion.node.json dist/nodes/Fusion/Fusion.node.json && cp nodes/Fusion/FusionChatModel.node.json dist/nodes/Fusion/FusionChatModel.node.json && cp nodes/Fusion/FusionChat.node.json dist/nodes/Fusion/FusionChat.node.json",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes/**/*.ts credentials/**/*.ts package.json",
    "lintfix": "eslint nodes/**/*.ts credentials/**/*.ts package.json --fix",
    "prepublishOnly": "npm run build && npm run lint",
    "prepare": "npm run build",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/FusionApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Fusion/FusionChatModel.node.js",
      "dist/nodes/Fusion/Fusion.node.js",
      "dist/nodes/Fusion/FusionChat.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "n8n-core": "*",
    "n8n-workflow": "*",
    "@langchain/core": "^0.2.0",
    "langchain": "^0.2.0"
  },
  "peerDependenciesMeta": {
    "@langchain/core": {
      "optional": true
    },
    "langchain": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
